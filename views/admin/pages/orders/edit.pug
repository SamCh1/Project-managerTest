extends ../../layouts/default.pug
include ../../mixins/alert.mixins.pug
block main
    if(role.permissions.includes("orders_edit"))
        h1(class='mb-2') #{pageTitle}
        form(
            action=`/${prefixAdmin}/order/edit/${order.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
        div(class="form-group")
            label(for="fullName") Họ tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value=order.userInfo.fullName
                required
            )
        div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    required
                    value=order.userInfo.phone
                )
        div(class="form-group")
                label(for="address") Địa chỉ
                input(
                    type="text"
                    class="form-control"
                    id="address"
                    name="address"
                    value=order.userInfo.address
                    required
                )
        div(class="form-group")
                label(for="email") email
                input(
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    value=order.users.email
                    readonly
                )
        div(class="form-group")
            button(
            type="submit"
            class="btn btn-primary"
            ) Cập nhật
    else
        h1 Bạn không có quyền truy cập!