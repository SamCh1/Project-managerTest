extends ../../layouts/default.pug
include ../../mixins/alert.mixins.pug
block main
    if(role.permissions.includes("orders_view"))
      +alert-success(5000)
      +alert-error(5000)
      h1(class="mb-4") Chi tiết hoá đơn
      if(order)
        .row
          .col-12
            h4(class="mb-2") Thông tin khách hàng
            table(class="table table-bordered")
              tbody
                tr
                  td Họ tên
                  td
                    b #{order.userInfo.fullName}
                tr
                  td Số điện thoại
                  td
                    b #{order.userInfo.phone}
                tr
                  td Địa chỉ
                  td
                    b #{order.userInfo.address}
                tr
                  td email
                  td
                    b #{order.users.email}
        .row
          .col-12
            h4(class="mb-2") Thông tin đơn hàng
            table(class="table table-bordered")
              thead
                tr
                  th STT
                  th Ảnh
                  th Tên
                  th Giá
                  th Số lượng
                  th Tổng tiền
              tbody
                if(order.products.length > 0)
                  each item, index in order.products
                    tr
                      td #{index + 1}
                      td
                        img(
                          src=item.thumbnail
                          alt=item.title
                          width="80px"
                        )
                      td #{item.title}
                      td #{item.price}$
                      td #{item.quantity}
                      td #{item.totalPrice}$


            if(order.products.length > 0)
              h3(class="text-right") Tổng đơn hàng: #{order.totalPrice}$
            form(
              action=`/${prefixAdmin}/order/detail/${order.id}?_method=PATCH`
              method="POST"
            )
            if(role.permissions.includes("orders_edit"))
                if(order.status === "active")      
                  div(class="form-group mb-2" )
                    button(
                      type="submit"
                      class="btn btn-primary"
                      data-status = order.status
                    ) Thanh toán
                else
                  div(class="form-group mb-2" )
                    button(
                      type="submit"
                      class="btn btn-primary"
                      data-status = order.status
                      disabled
                    ) Đã thanh toán
    else 
      h1 Bạn không có quyền truy cập!