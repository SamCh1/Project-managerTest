extends ../../layouts/default.pug
include ../../mixins/alert.mixins.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng ký tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          div(class="form-group")
            label(for="fullName") Họ và tên
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              placeholder = "Họ tên không được có ký tự đặc biệt hoặc số"
              required
            )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder = "Mật khẩu phải có ít nhất 8 kí tự, 1 chữ hoa, 2 chữ số và chữ thường"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng ký